<Entity 
	name="$projectile_default" 
>

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="-1"
			gravity_y="0" 
			mass="0.09"
			liquid_drag="0"
			>
		</VelocityComponent>
	</Base>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="300"
		speed_max="300"
		friction="1"
		direction_random_rad="0.0"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		explosion_dont_damage_shooter="1" 
		die_on_low_velocity="1"
		on_collision_die="0"
		lifetime="90"
		damage="0.04"
		knockback_force="0.1"
		velocity_sets_scale="0"
		lifetime_randomness="7"
		velocity_sets_rotation="1"
		ragdoll_force_multiplier="0.0025"
		hit_particle_force_multiplier="0.25"
		collide_with_shooter_frames="6"
		friendly_fire="0"
		damage_game_effect_entities="data/entities/misc/effect_frozen_short.xml,"
		camera_shake_when_shot="0.4"
		muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_magic_launcher.xml"
		shoot_light_flash_r="250"
		shoot_light_flash_g="250"
		shoot_light_flash_b="250"
		shoot_light_flash_radius="100"
		knockback_force="2.8"
		physics_impulse_coeff="4000"
		>
		<damage_by_type
			ice="0.16"
			curse="0.04"
			>
		</damage_by_type>
		<config_explosion
			never_cache="1" 
			damage="0.2"
			camera_shake="15.0" 
			explosion_radius="42"
			explosion_sprite="data/particles/explosion_040_poof_blue.xml" 
			explosion_sprite_lifetime="0" 
			create_cell_probability="4"
			create_cell_material="blood_cold_vapour"
			hole_destroy_liquid="0"
			load_this_entity="data/entities/particles/particle_explosion/main_blue_small.xml"
			hole_enabled="1" 
			ray_energy="5000000"
			max_durability_to_destroy="16"
			particle_effect="0" 
			damage_mortals="1"
			physics_explosion_power.min="0.6"
			physics_explosion_power.max="0.9"
			physics_throw_enabled="1" 
			shake_vegetation="1" 
			sparks_count_max="100" 
			sparks_count_min="80" 
			sparks_enabled="1" 
			light_enabled="0" 
			stains_enabled="1"
			stains_radius="1"
			spark_material="spark_blue"
			audio_enabled="0"
			 >
		</config_explosion>
	</ProjectileComponent>

	<LightComponent 
		_enabled="1" 
		radius="150" 
		r="180"
		g="180"
		b="180"
		 >
	</LightComponent>

	<ParticleEmitterComponent 
		emitted_material_name="spark_blue"
		count_min="1"
		count_max="1"
		offset.x="0"
		offset.y="0"
		gravity.y="0"
		count_min="1"
		count_max="1"
		lifetime_min="0.6"
		lifetime_max="1.0"
		is_trail="1"
		trail_gap="1.0"
		emit_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1"
		 >
	</ParticleEmitterComponent>

	<ParticleEmitterComponent 
		emitted_material_name="spark_white"
		count_min="3"
		count_max="6"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="0"
		y_pos_offset_min="-1"
		x_pos_offset_max="0"
		y_pos_offset_max="1"
		gravity.y="0"
		count_min="1"
		count_max="1"
		lifetime_min="0.6"
		lifetime_max="0.9"
		is_trail="1"
		trail_gap="0.4"
		fade_based_on_lifetime="1"
		emit_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="4"
		emission_interval_max_frames="8"
		is_emitting="1"
		 >
	</ParticleEmitterComponent>

	<ParticleEmitterComponent 
		emitted_material_name="spark_white_bright"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-2"
		y_pos_offset_min="-2"
		x_pos_offset_max="2"
		y_pos_offset_max="2"
		x_vel_min="-10"
		x_vel_max="10"
		y_vel_min="-10"
		y_vel_max="10"
		count_min="10"
		count_max="20"
		lifetime_min="0.9"
		lifetime_max="1.0"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		render_on_grid="1"
		gravity.y="24"
		fade_based_on_lifetime="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		is_emitting="1"
		 >
	</ParticleEmitterComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="player_projectiles/glowing_bolt"
		>
	</AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Nemesis-Ability-Plus/files/entities/projectiles/glowing_ice_bolt.xml"
		>
	</VariableStorageComponent>

	<MagicConvertMaterialComponent
		stain_frozen="1"
		from_material="water"
		to_material="water_ice"
		steps_per_frame="20"
		loop="1"
		is_circle="1"
		radius="8"
		 >
	</MagicConvertMaterialComponent>

	<MagicConvertMaterialComponent
		from_material_array = "water_ice,water_salt,water_static,water_swamp,lava,radioactive_liquid,acid,blood_cold,blood,poison,slime"
		to_material_array = "ice_static,ice_static,ice_static,ice_static,rock_static,ice_radioactive_static,ice_acid_static,ice_cold_static,ice_blood_static,ice_poison_static,ice_slime_static"
		steps_per_frame="20"
		loop="1"
		is_circle="1"
		radius="12"
		 >
	</MagicConvertMaterialComponent>

</Entity>
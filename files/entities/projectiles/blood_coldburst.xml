<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="-100"
			mass="0.02"
			>
    	</VelocityComponent> 
	</Base>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="80"
		speed_max="300"
		friction="0.0"
		direction_random_rad="0.5"
		on_death_explode="0"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="0"
		explosion_dont_damage_shooter="1" 
		die_on_low_velocity="1"
		on_collision_die="0"
		lifetime="15"
		damage="0"
		velocity_sets_scale="0"
		lifetime_randomness="12"
		ragdoll_force_multiplier="0.01"
		hit_particle_force_multiplier="0.25 "
		camera_shake_when_shot="0.0" >
	</ProjectileComponent>
  
	<ParticleEmitterComponent 
		emitted_material_name="blood_cold_vapour"
		count_min="2"
		count_max="8"
		offset.x="0"
		offset.y="1"
		x_pos_offset_min="-4"
		y_pos_offset_min="-4"
		x_pos_offset_max="4"
		y_pos_offset_max="4"
		x_vel_min="-10"
		x_vel_max="10"
		y_vel_min="-10"
		y_vel_max="10"
		count_min="1"
		count_max="2"
		lifetime_min="0.6"
		lifetime_max="1.8"
		create_real_particles="1"
		emit_cosmetic_particles="0"
		emission_interval_min_frames="1"
		emission_interval_max_frames="8"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Nemesis-Ability-Plus/files/entities/projectiles/blood_coldburst.xml"
		>
	</VariableStorageComponent>
  
</Entity>


<Entity name="$projectile_default" >

  <Base file="data/entities/base_projectile_physics.xml">

    <PhysicsImageShapeComponent 
      image_file="mods/Nemesis-Ability-Plus/files/projectiles_gfx/poisonbomb.png"
      material="fuse_holy" >
    </PhysicsImageShapeComponent>
  
    <ProjectileComponent
      lifetime="300"
	  damage="0"
	  muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_magic_launcher_holy.xml"
	  shoot_light_flash_radius="120"
	  shoot_light_flash_r="255"
	  shoot_light_flash_g="240"
	  shoot_light_flash_b="30"
      ><config_explosion
		never_cache="0" 
		  damage="10"
		  camera_shake="60" 
		  explosion_radius="135" 
		  explosion_sprite="data/particles/explosion_128.xml" 
		  explosion_sprite_lifetime="0" 
		  load_this_entity="data/entities/particles/particle_explosion/main_large_radius.xml,data/entities/misc/loose_ground.xml,data/entities/misc/explosion_was_here.xml"
		  create_cell_probability="35" 
		  create_cell_material="poison" 
		  hole_destroy_liquid="0" 
		  hole_enabled="1" 
		  ray_energy="6400000"
		  particle_effect="1" 
		  damage_mortals="1"
		  physics_explosion_power.min="4.5"
		  physics_explosion_power.max="9" 
		  shake_vegetation="1" 
		  spark_material="poison"
		  sparks_count_max="1500" 
		  sparks_count_min="1600" 
		  sparks_enabled="1" 
		  stains_enabled="1" 
		  stains_radius="36"
		  background_lightning_count="5" 
		  max_durability_to_destroy="12" 
      audio_event_name="explosions/holy" 
      >
      </config_explosion>
    </ProjectileComponent>


		<DamageModelComponent 
			_tags="enabled_in_world"
			hp="10.9"
			air_needed="0"
			drop_items_on_death="0" 
			falling_damages="0" 
			fire_damage_amount="0" 
			ragdoll_filenames_file="" 
			fire_probability_of_ignition="0" 
			critical_damage_resistance="1"
			ragdoll_material=""
			blood_multiplier="0.4"
			ragdoll_blood_amount_absolute="0"
			blood_material="poison"
			blood_spray_material="poison"
			materials_create_messages="0" 
			materials_damage="0"
			ui_report_damage="0"
			>
			<damage_multipliers
				melee="0.0"
				fire="0.0" 
				ice="0.0"
				>
			</damage_multipliers>
		</DamageModelComponent>

    <PhysicsThrowableComponent
      _tags="enabled_in_world"
      throw_force_coeff="1.35" >
    </PhysicsThrowableComponent>

  </Base>


  <ExplosionComponent
	_tags="enabled_in_world"
	trigger="ON_DEATH"
	>
<config_explosion
		never_cache="0" 
		  damage="5"
		  camera_shake="60" 
		  explosion_radius="215" 
		  explosion_sprite="data/particles/explosion_128.xml" 
		  explosion_sprite_lifetime="0" 
		  load_this_entity="data/entities/particles/particle_explosion/main_large_radius.xml,data/entities/misc/loose_ground.xml,data/entities/misc/explosion_was_here.xml"
		  create_cell_probability="20" 
		  create_cell_material="poison" 
		  hole_destroy_liquid="0" 
		  hole_enabled="1" 
		  ray_energy="3200000"
		  particle_effect="1" 
		  damage_mortals="1"
		  physics_explosion_power.min="4.5"
		  physics_explosion_power.max="9" 
		  shake_vegetation="1" 
		  spark_material="poison"
		  sparks_count_max="1500" 
		  sparks_count_min="1600" 
		  sparks_enabled="1" 
		  stains_enabled="1" 
		  stains_radius="36"
		  background_lightning_count="5" 
		  max_durability_to_destroy="12" 
      audio_event_name="explosions/holy" 
      >
      </config_explosion>
</ExplosionComponent>

  <!-- fx -->

  <ParticleEmitterComponent 
    emitted_material_name="smoke"
    offset.x="-1"
    offset.y="-8"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-10"
    y_vel_max="10"
    count_min="1"
    count_max="4"
    lifetime_min="0.1"
    lifetime_max="0.3"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    is_emitting="1" >
  </ParticleEmitterComponent>

  <!-- very sparse emitter -->
  <ParticleEmitterComponent 
    emitted_material_name="spark"
    offset.x="-1"
    offset.y="-8"
    x_vel_min="10"
    x_vel_max="20"
    y_vel_min="0"
    y_vel_max="0"
    gravity.y="0.0"
    count_min="1"
    count_max="2"
    lifetime_min="1.4"
    lifetime_max="1.5"
    is_trail="0"
    trail_gap="8.0"
    render_on_grid="1"
    fade_based_on_lifetime="1"
    airflow_force="0.5"
    airflow_time="0.5"
    airflow_scale="0.05"
    emission_interval_min_frames="3"
    emission_interval_max_frames="5"
    emit_cosmetic_particles="1"
    create_real_particles="0"
    is_emitting="1" >
  </ParticleEmitterComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bomb_holy">
  </AudioComponent>

  <AudioLoopComponent
    file="data/audio/Desktop/projectiles.bank"
    event_name="projectiles/fuse_burn_magic"
    auto_play="1">
  </AudioLoopComponent>
  
  <VariableStorageComponent
		name="projectile_file"
		value_string="mods/Nemesis-Ability-Plus/files/entities/projectiles/poisonbomb.xml"
		>
	</VariableStorageComponent>
  
</Entity>
